<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pratush.docfinder.activities.DocTypeActivity">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/setdoctext"
        android:hint="Category"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setdoclist"
        android:layout_alignLeft="@+id/setdoctext"
        android:layout_alignStart="@+id/setdoctext"
        android:layout_alignRight="@+id/setdoctext"
        android:layout_alignEnd="@+id/setdoctext"
        android:layout_below="@+id/setdoctext" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/consult"
        android:hint="Consultation fee"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/setdoclist"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/qual"
        android:hint="qualifications"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/consult"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="next"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="address"
        android:id="@+id/address"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/qual"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
